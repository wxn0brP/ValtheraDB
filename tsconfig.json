{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ES2022",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowArbitraryExtensions": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}